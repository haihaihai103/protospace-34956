<div class="card">
  <%= image_tag prototype.image, class: 'prototype-image' if prototype.image.attached? %>
  <%= link_to prototype.title, prototype_path(prototype.id), class: :card__img %>
  </div>
  <div class="card__body">
    <%= link_to prototype.catch_copy, prototype_path(prototype.id), class: :card__title %>
    <p class="card__summary">
    <%= prototype.catch_copy %>
    </p>
    <%= link_to "by #{prototype.user.name}", user_path(@prototypes.ids), class: :card__user %>
  </div>
</div>